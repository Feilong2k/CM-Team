# Backend env
PORT=3500
# Allow localhost:6100-6120 (frontend port range)
CORS_ORIGIN_REGEX=^http:\/\/localhost:61[0-1][0-9]$

# Bump this manually when you change key runtime settings (e.g. ORION_MODEL_PROVIDER)
SERVER_VERSION=dev-YYYY-MM-DDx

# LOCAL POSTGRES
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Tracing / debug
# Trace timeline (in-memory) is ON by default.
# Set TRACE_ENABLED=false to disable /api/trace and stop logging.
TRACE_ENABLED=true

# Soft-stop window (ms) for blocking identical tool calls within a single requestId.
# Default is 60000 if not set.
TOOL_SOFTSTOP_WINDOW_MS=60000

# Duplication probe files are OFF by default.
ORION_DUP_PROBE_ENABLED=false
# ORION_DUP_PROBE_DIR=backend/debug/dup_probe

# Two-stage protocol selection
# Set TWO_STAGE_ENABLED=true to enable two-stage protocol (triggered-phase) for all chat messages.
# When false or unset, standard streaming protocol is used.
TWO_STAGE_ENABLED=false
